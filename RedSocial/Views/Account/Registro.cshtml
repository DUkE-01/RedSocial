@using RedSocial.Core.Application.ViewModels.Usuario;
@model SaveUserViewModel
@{
 
    ViewData["Title"] = "Save User";
}

<div class="container">
    <div class="col-6 offset-3">

        <form method="post" asp-controller="User" asp-action= "Register")">
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="FirstName" class="form-label">Nombre</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="LastName" class="form-label">Apellido</label>
                    <input asp-for="LastName" class="form-control" placeholder="Last name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" placeholder="Username">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password"  type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="ConfirmPassword" class="form-label">Confirmar contrase√±a</label>
                    <input asp-for="ConfirmPassword"  class="form-control" placeholder="Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="Photo" class="form-label fw-bold">Image profile</label>
                    <input required asp-for="Photo" class="form-control anotherDesign">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Email" class="form-label">Correo</label>
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

           

        </form>
    </div>
</div>

